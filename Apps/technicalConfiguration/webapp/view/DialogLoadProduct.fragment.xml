<core:FragmentDefinition xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>LoadProduct}"
			class="sapUiPopupWithPadding"
			confirm="onCancelCopy"
			cancel="onCancelCopy"
			busy="false">

	<f:SimpleForm
						id="LoadProduct"
						editable="true"
						labelSpanL="5"
						labelSpanM="4"
						labelSpanS="4"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsL="2"
		        columnsM="2"
						maxContainerCols="2"
						layout="ResponsiveGridLayout"
						width="100%"
            height="80%"
						busy="false">

            
            <Label text="{i18n>broilerProduct.code}" design="Bold"/>
            <Input id="ProductCode" width="100%" type="Text" 
                valueState="{mdbill>/state}"
                valueStateText="{mdbill>/stateText}"/>

						<Label text="{i18n>broilerProduct.quantity}" design="Bold"/>
            <Input id="Productquantity" width="100%" type="Text" 
                valueState="{mdbill>/state}" liveChange="validateIntInput"
                valueStateText="{mdbill>/stateText}"/>		
                          
    	</f:SimpleForm>

    <beginButton>
      <Button text="{i18n>cargar}" type="Accept" press="onLoadProductInfo"/>
    </beginButton>
    <endButton>
      <Button text="{i18n>cancel}" type="Reject" press="onLoadProductCloseDialog"/>
    </endButton>

  </Dialog>
</core:FragmentDefinition>
